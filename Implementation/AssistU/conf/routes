# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                 controllers.Application.index()

#task
GET         /task                             controllers.Application.task()

#login
GET         /login                            controllers.Authentication.login()
POST        /login                            controllers.Authentication.authenticate()


#calendar
GET         /calendar                         controllers.Application.calendar()

#project
GET         /project                          controllers.Application.project()
POST        /project/create                   controllers.ProjectData.createProject()
GET         /project/:pid/edit                controllers.ProjectData.editProject(pid: Long)
GET         /:uid/project/:pid/archive        controllers.ProjectData.archiveProject(uid: String, pid: Long)
GET         /project/:pid/addMember           controllers.ProjectData.addMemberToProjectAs(pid: Long)
GET         /project/:pid/removeMember/:uid   controllers.ProjectData.removeMemberFromProject(uid: String, pid: Long)
POST        /project/upload                   controllers.Datafile.uploadDocument(pid : Long)
GET         /project/download/:fileid         controllers.Datafile.downloadDocument(fileid :Long)


#Suggestions
GET         /suggestions                      controllers.Application.suggestions()

#inbox
GET         /discussion                       controllers.Application.discussion()







# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.at(path="/public", file)
GET         /webjars/*file                    controllers.WebJarAssets.at(file)
