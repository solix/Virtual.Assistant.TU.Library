# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                controllers.Application.index()

#task
GET         /task                            controllers.Application.task()

#login
GET         /login                           controllers.Application.login()



#calendar
GET         /calendar                        controllers.Application.calendar()

#project
GET         /project                         controllers.Application.project()
POST        /:uid/project/create             controllers.Application.createProject(uid: String)
GET         /project/:pid/edit               controllers.Application.editProject(pid: Long)
GET         /project/archive                 controllers.Application.archiveProject()
POST        /project/upload                  controllers.Datafile.uploadDocument()
GET         /project/download/:fileid        controllers.Datafile.downloadDocument(fileid :Long)


#Suggestions
GET         /suggestions                     controllers.Application.suggestions()

#inbox
GET         /discussion                      controllers.Application.discussion()







# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)
GET         /webjars/*file                   controllers.WebJarAssets.at(file)
