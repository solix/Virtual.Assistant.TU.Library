# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                 controllers.Application.index()

#task
GET         /task                             controllers.Application.task()

#login
GET         /login                            controllers.Application.login()



#calendar
GET         /calendar                         controllers.Application.calendar()

#project
GET         /project                          controllers.Application.project()
POST        /project/create              controllers.Application.createProject()
GET         /project/:pid/edit                controllers.Application.editProject(pid: Long)
GET         /:uid/project/:pid/archive        controllers.Application.archiveProject(uid: String, pid: Long)
GET         /project/:pid/addMember           controllers.Application.addMemberToProjectAs(pid: Long)
GET         /project/:pid/removeMember/:uid   controllers.Application.removeMemberFromProject(pid: Long, uid: String)
POST        /project/upload                   controllers.Datafile.uploadDocument(pid : Long)
GET         /project/download/:fileid         controllers.Datafile.downloadDocument(fileid :Long)


#Suggestions
GET         /suggestions                      controllers.Application.suggestions()

#inbox
GET         /discussion                       controllers.Application.discussion()







# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.at(path="/public", file)
GET         /webjars/*file                    controllers.WebJarAssets.at(file)
