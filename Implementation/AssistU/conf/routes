# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                          controllers.Application.index()

#task
GET         /task                      controllers.Application.task()

#login
GET         /login                     controllers.Application.login()

#calendar
GET         /calendar                  controllers.Application.calendar()

#project
GET         /project                   controllers.Application.project()
POST        /project/upload            controllers.Datafile.uploadDocument()
GET         /project/download/:fileid  controllers.Datafile.downloadDocument(fileid :Long)
POST        /project/newProject        controllers.Application.createNewProject()
GET         /project/:id               controllers.Application.deleteProject(id: Long)

#Suggestions
GET         /suggestions               controllers.Application.suggestions()

#inbox
GET         /discussion                controllers.Application.discussion()







# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file              controllers.Assets.at(path="/public", file)
GET         /webjars/*file             controllers.WebJarAssets.at(file)
