# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                      controllers.Application.index()

#task
GET         /task                                  controllers.Application.task()
POST        /task/new                              controllers.TaskData.addTask()
GET         /task/get                              controllers.TaskData.getTasks()
GET         /task/delete/:tid                      controllers.TaskData.deleteTask(tid: Long)
GET         /task/done/:tid                        controllers.TaskData.doneTask(tid: Long)
GET         /task/undo/:tid                        controllers.TaskData.undoTask(tid: Long)


#login
GET         /login                                 controllers.Authentication.login()
POST        /login                                 controllers.Authentication.authenticate()

#OAuth 2 - Google+
GET         /logout                                controllers.Authentication.OAuthLogout()
GET         /authenticate/:provider                controllers.Authentication.OAuth(provider: String)
GET         /authenticate/:provider/denied         controllers.Authentication.OAuthDenied(provider: String)

#calendar
GET         /calendar                              controllers.CalData.calendar()
GET         /:id/events                                controllers.CalData.list(id: Long)
GET         /events.json                           controllers.CalData.json(start: Long , end: Long )
GET         /event/:id/edit                       controllers.CalData.edit(id:Long)
POST        /event/:id/update                     controllers.CalData.update(id:Long)
POST        /event                                controllers.CalData.add()
GET     /event/new                                controllers.CalData.blank()
GET     /event/:id/delete                         controllers.CalData.delete(id:Long)
POST    /:id/event-ajax                               controllers.CalData.addByAjax(id:Long)
POST    /event-move                               controllers.CalData.move()
POST    /event-resize                             controllers.CalData.resize()


#project
GET         /project                               controllers.Application.project()
POST        /:uid/project/create                   controllers.ProjectData.createProject(uid: Long)
GET         /project/:pid/edit                     controllers.ProjectData.editProject(pid: Long)
GET         /:uid/project/:pid/archive             controllers.ProjectData.archiveProject(uid: Long, pid: Long)
GET         /project/:pid/addMember                controllers.ProjectData.addMemberToProjectAs(pid: Long)
GET         /project/:pid/removeMember/:uid        controllers.ProjectData.removeMemberFromProject(uid: Long, pid: Long)
POST        /project/upload                        controllers.Datafile.uploadDocument(pid : Long)
GET         /project/download/:fileid              controllers.Datafile.downloadDocument(fileid :Long)

#discussion
GET         /discussion                            controllers.Application.discussion()
GET         /chatFeed/:project                     controllers.ChatData.chatFeed(project: String)
POST        /chat                                  controllers.ChatData.postMessage()
GET         /comments/:pid                         controllers.ChatData.getOldMessages(pid: Long)
GET         /:uid/projectids                       controllers.ProjectData.getProjectIdsAsJson(uid: Long)

#Suggestions
GET         /suggestions                           controllers.Application.suggestions()
GET         /suggestions/:subject                  controllers.SuggestionData.suggestion(subject: String)









# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                          controllers.Assets.at(path="/public", file)
GET         /webjars/*file                         controllers.WebJarAssets.at(file)
